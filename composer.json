{
    "require": {
        "squizlabs/php_codesniffer": "*"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "wp-coding-standards/wpcs": "^2.3",
        "phpcompatibility/phpcompatibility-wp": "*"
    },
    "scripts": {
        "format": [
            "phpcs --standard=WordPress --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1",
            "phpcbf --standard=WordPress --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1"
        ]
    }
}
