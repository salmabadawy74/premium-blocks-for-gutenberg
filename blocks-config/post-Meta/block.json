{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "premium/post-meta",
    "title": "Post Meta",
    "category": "premium-blocks",
    "parent": ["premium/post-template"],
    "description": "Display a post's Meta.",
    "textdomain": "default",
    "attributes": {
        "showAuther": {
            "type": "boolean",
            "default": true
        },
        "showDate": {
            "type": "boolean",
            "default": true
        },
        "showCategories": {
            "type": "boolean",
            "default": true
        },
        "showComments": {
            "type": "boolean",
            "default": true
        },

        "typography": {
            "type": "object",
            "default": {
                "fontWeight": "Default",
                "fontStyle": "",
                "letterSpacing": {
                    "Desktop": "",
                    "Tablet": "",
                    "Mobile": "",
                    "unit": "px"
                },
                "fontFamily": "Default",
                "lineHeight": {
                    "Desktop": "",
                    "Tablet": "",
                    "Mobile": "",
                    "unit": "px"
                },
                "textDecoration": "",
                "textTransform": "",
                "fontSize": {
                    "Desktop": "",
                    "Tablet": "",
                    "Mobile": "",
                    "unit": "px"
                }
            }
        },

        "color": {
            "type": "string"
        },
        "hoverColor": {
            "type": "string"
        },
        "sepColor": {
            "type": "string"
        },
        "hideDesktop": {
            "type": "boolean",
            "default": false
        },
        "hideTablet": {
            "type": "boolean",
            "default": false
        },
        "hideMobile": {
            "type": "boolean",
            "default": false
        }
    },
    "usesContext": ["postId", "postType", "queryId"],
    "supports": {
        "html": false
    }
}
